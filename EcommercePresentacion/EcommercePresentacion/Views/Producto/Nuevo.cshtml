@model ProductoDTO


<div style="margin:35px 250px">
    <h2>Nuevo Producto</h2>
    <hr />
    <form action="@Url.Action("Nuevo", "Producto")" method="post">
        <div class="form-group">
            <label>Nombre : </label>
            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Precio : </label>
            @Html.TextBoxFor(x => x.Precio, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Stock : </label>
            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Descripción: </label>
            @Html.TextAreaFor(x => x.Descripcion, new { @class = "Form-control" })
        </div>
        <div class="form-group">
            <label>Referencia: </label>
            @Html.TextBoxFor(x => x.Referecnia, new { @class = "Form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </form>
</div>